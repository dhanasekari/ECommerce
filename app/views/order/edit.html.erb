<h1>Edit Order</h1>

<%= form_for @order, :url =>{:action => "update", :id =>@order} do |order| %>

<p>SubTotal: <%= order.text_field 'subtotal' %></p>
<p>Tax: <%= order.text_field 'tax' %></p>
<p>Shipping: <%= order.text_field  'shipping' %></p>
<p>Total: <%= order.text_field 'total' %></p>
<%= order.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'index' } %>