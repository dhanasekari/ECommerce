<% if @product.blank? %>
<p>There is no Product.</p>
<% else %>
<p>Product</p>

<ul id = "product">
   <% @product.each do |product| %>
   <li><%= link_to product.ProductName, {:action => 'show', :id => product.id} -%>
   	
   	<b> <%= link_to 'Edit', {:action => "edit",
   		:id => product.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => product.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new product", {:action => 'new' }%></p>