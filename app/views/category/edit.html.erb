<h1>Edit Category</h1>

<%= form_for @category, :url =>{:action => "update", :id =>@category} do |category| %>

<p>Category: <%= category.text_field 'name' %></p>
<p>Description: <%= category.text_field 'description' %></p>

<p>Available: <%= category.text_field  'active' %></p>

<%= category.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'index' } %>