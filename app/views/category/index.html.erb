<%if @category.blank?%>
<p> There is no categories </p>
<%else%>
<p>Categories</p>
<ul>
<%@category.each do |cat|%>
<li><%=cat.name %>
<b> <%= link_to 'show', {:action =>'show', :id => cat.id}%></b>
<b> <%= link_to 'Edit', {:action => "edit",	:id => cat.id} %></b>
<b> <%= link_to "Delete", {:action => 'delete', :id => cat.id},
    :confirm => "Are you sure you want to delete this item?" %></b>
    <b> <%= link_to 'Product', {:action => "show_product",	:id => cat.id} %></b>

</li>
<%end%>
</ul>
<p><%= link_to "Add new category", {:action => 'new' }%></p>
<%= link_to 'back', {:action =>'index'}%>

<%end%>