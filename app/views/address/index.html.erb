<% if @address.blank? %>
<p>There is no fields.</p>
<% else %>
<p>Address</p>

<ul id = "address">
   <% @address.each do |addr| %>
   <li><%= link_to addr.fname, {:action => 'show', :id => addr.id} -%>
   	
   	<b> <%= link_to 'Edit', {:action => "edit",
   		:id => addr.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => addr.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new fields", {:action => 'new' }%></p>